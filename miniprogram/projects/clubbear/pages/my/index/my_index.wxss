@import "../../../style/skin.wxss";

page {
	background-color: #F6F8EA;
	width: 100%;
	display: flex;
}

.main {
	padding: 0;
	width: 100%;
	overflow: hidden;
}

.top {
	height: 320rpx;

	background-image: linear-gradient(180deg, #56A995, #56A995, #96ceb0);
	display: flex;
	align-items: flex-start;
	justify-content: center;
	width: 100%;
	padding-top: 40rpx;
	position: relative;
	overflow: hidden;
}

.top .inner {
	width: 100vw;
	display: flex;
	padding: 0 35rpx;
	justify-items: center;
}

.top .inner image {
	height: 110rpx;
	width: 110rpx;
	border-radius: 50%;
}

.top .inner .right {
	flex: 1;
	margin-left: 20rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
}

.top .inner .right .line1 {
	width: 100%;
	display: flex;
	align-items: center;
	margin-bottom: 15rpx;
}

.top .inner .right .line1 .name {
	font-size: 34rpx;
	font-weight: bold;
	margin-right: 20rpx;
	color: #fff;
}

.top .inner .right .line1 .type {
	font-size: 28rpx;
	padding: 0 25rpx;
	background-color: #fff;
	color: var(--projectColor);
	border-radius: 30rpx;
}

.top .inner .right .line2 {
	font-size: 26rpx;
	color: #fff;
}

.main .down {
	box-sizing: border-box;
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	padding: 20rpx 0rpx !important;
	position: relative;
}

.main .comm-list .item.arrow::before,
.main .comm-list .item .content .item-icon {
	color: #0E9489;
}

.main .site-footer {
	width: 100%;
	align-self: flex-end;
}

.main .upside-shadow {
	box-shadow: unset
}

.down .comm-list.menu {
	border-radius: 0rpx !important;
	border-top-left-radius: 40rpx !important;
	border-top-right-radius: 40rpx !important;
	margin-top: -80rpx;
	padding:30rpx 40rpx;
	background-image: linear-gradient(180deg, #F5F9F6, #F6F8EA);
}

.comm-list.menu>.item {
	background-color: unset;
}

.comm-list.menu>.item:after { 
	border-bottom: 2rpx solid #aaa; 
}