@import "../../../../../style/public/comm_box_list.wxss";
@import "../../../style/skin.wxss";

page {
	background-color: #fff !important;
}

.main {
	width: 100%;
	padding: 0;
}

.top {
	position: relative;
	width: 100%;
	display: flex;
	flex-direction: column;
	background-image: linear-gradient(180deg, #56A995, #96ceb0);
	padding: 0 30rpx 60rpx;
}

.top .line1 {
	width: 100%;
	padding: 30rpx 0;
}

.top .line1 .location {
	color: #fff;
	display: flex;
	align-items: center;
	font-size: 30rpx;
}

.top .line1 .location .icon-location {
	font-size: 46rpx;
}

.top .line2 {
	display: flex;
	padding: 0rpx 40rpx 40rpx;
	justify-content: space-between;
}

.top .line2 .item {
	display: flex;
	flex-direction: column;
	background-color: #459985;
	color: #fff;
	align-items: center;
	padding: 20rpx 20rpx;
	border-radius: 14rpx;
	font-size: 28rpx;
	font-weight: bold;
	box-shadow: 6rpx 6rpx 20rpx rgba(133, 175, 152, 0.733);
}

.top .line2 .item image {
	width: 55rpx;
	height: 55rpx;
	margin-bottom: 6rpx;
}

.top .line3 {
	width: 100%;
	display: flex;
	justify-content: space-around;
	padding: 10rpx 0 10rpx;
	margin-bottom: 10rpx;
}

.top .line3 .item {
	padding: 10rpx 0rpx;
	font-size: 32rpx;
	color: #fff;
	font-weight: bold;
}

.top .line3 .item .tt {
	border-bottom: 6rpx solid transparent;
	padding-bottom: 10rpx;
}

.top .line3 .item .tt.cur {
	border-bottom: 6rpx solid var(--projectCompareColor);
	padding-bottom: 10rpx;
	animation: tab-line-show 0.3s;
	animation-fill-mode: forwards;
}

.down {
	width: 100%;
	background-color: #fff;
	margin-top: -50rpx;
	position: relative;
	min-height: 500rpx;
	border-top-left-radius: 50rpx;
	border-top-right-radius: 50rpx;
	padding: 40rpx 24rpx;
}

.down .hint {
	width: 100%;
	text-align: center;
	font-size: 24rpx;
	margin-top: 10rpx;
	color: #999;
}

.cate-list {
	width: 100%;
	display: flex;
	justify-content: space-around;
	padding: 10rpx 20rpx;
}

.cate-list .item {
	padding: 4rpx 20rpx;
	background-color: #f2f2f2;
	color: #999;
	border-radius: 6rpx;
	font-size: 28rpx;
}


.cate-list .item.cur {
	background: #318b79;
	color: #fff;
}

.list {
	width: 100%;
	padding: 10rpx 10rpx;
	display: flex;
	flex-direction: column;
}

.list .day {
	width: 100%;
	font-size: 34rpx;
	font-weight: bold;
	padding: 20rpx 20rpx;
	position: relative;
	display: flex;
}

.list .day .txt {
	position: relative;
	z-index: 99;
}

.list .day .txt .mm {
	font-size: 70rpx;
}

.list .day .txt:after {
	content: " ";
	position: absolute;
	left: 50%;
	bottom: 2rpx;
	width: 100%;
	height: 8rpx;
	background-color: #FFE48F;
	transform: translateX(-50%);
}

.list .item {
	width: 100%;
	display: flex;
	background-color: #f8f8f8;
	padding: 30rpx 20rpx 30rpx;
	overflow: hidden;
	position: relative; 
	position: relative;
	overflow: hidden;
	border-bottom:2rpx dashed #ddd;
	border-radius: 12rpx;
}

.list .item .left {
	width: 210rpx;
	height: 300rpx;
	border-radius: 10rpx;
	margin-right: 25rpx; 
	position: relative; 
}

.list .item .left>image {
	width: inherit;
	height: inherit;
	border-radius: inherit;
}

.list .item .left .mark {
	padding: 2rpx 10rpx;
	background-color: var(--projectColor);
	color: #fff;
	opacity: .9;
	font-size: 22rpx;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 9;
	border-top-left-radius: 10rpx;
	border-bottom-right-radius: 10rpx;
}

.list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.list .item .right .title {
	width: 100%;
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 20rpx;
	margin-top: 10rpx;
}


.list .item .right .detail {
	width: 100%;
	display: flex;
	flex-direction: column;
	font-size: 28rpx;
	color: #999;
}

.list .item .right .detail .line {
	width: 100%;
	margin-top: 8rpx;
}


.list .item .right .detail .line .num {
	margin-left: 4rpx;
	margin-right: 4rpx;
}

.list .item .status {
	position: absolute;
	bottom: 0;
	right: 0;
	font-size: 24rpx !important;
	background-color: #f2f2f2;
	color: #999;
	padding: 6rpx 25rpx;
	border-top-left-radius: 10rpx;
	border-bottom-right-radius: inherit;
	z-index: 9;
}

.list .item .status.comm {
	background-image: linear-gradient(35deg, #5AD372, #46B0AC, #67A5FC);
	color: #fff;
}
/* 过往 */
.his-list {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	padding: 30rpx;
}

.his-list .item {
	position: relative;
	width: 100%;
	display: flex;
	background-color: #fff;
	padding: 6rpx 20rpx 6rpx 0;
	border-radius: 20rpx;
	margin-bottom: 80rpx;
	position: relative;
	border-bottom-left-radius: 60rpx;
	height: 160rpx;
}

.his-list .item .left {
	width: 170rpx;
	height: 200rpx;
	margin-right: 20rpx;
	border-radius: 14rpx;
	border-top-right-radius: 50rpx;
	margin-top: -30rpx;
	z-index: 9;
	position: relative;
}

.his-list .item .left .mark {
	padding: 2rpx 10rpx;
	background-color: var(--projectColor);
	color: #fff;
	opacity: .9;
	font-size: 20rpx;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 9;
	border-top-left-radius: 10rpx;
	border-bottom-right-radius: 10rpx;
}

.his-list .item .left {
	box-shadow: 4rpx 2rpx 0rpx 0rpx #f5dfcf;
}

.his-list .item .left image {
	width: inherit;
	height: inherit;
	border-radius: inherit;
}

.his-list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	padding: 10rpx;
	align-items: flex-start;
	justify-content: space-between;
	position: relative;
}

 
.his-list .item .right .name {
	width: 100%;
	display: flex;
	align-items: center; 
}

.his-list .item .right .name .t1 {
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
}

.his-list .item .right .name .t2 {
	flex: 1;
	font-size: 24rpx;
	color: #777;
	margin-left: 10rpx;
}

.his-list .item .right .line1 {
	width: 100%;
	color: #999;
	font-size: 22rpx;
	padding: 2rpx 0;
	display: flex;
	align-items: center;
}


.his-list .item .right .line2 {
	width: 100%;
	padding: 0rpx 0;
	display: flex; 
	align-items: center;
}

.his-list .item .right .line2 .t1 {
	font-size: 24rpx; 
}

.his-list .item .right .line2 .t2 {
	font-size: 22rpx;
	margin-left: 6rpx;
}