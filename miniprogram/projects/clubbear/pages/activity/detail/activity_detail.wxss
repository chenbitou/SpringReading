@import "../../../../../style/public/detail.wxss";
@import "../../../style/skin.wxss";

page {
	background-color: #fff !important;
}

.main {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: flex-start;
	background-color: #fff;
	padding: 0rpx 0rpx;
}

.top {
	width: 100%;
	display: flex;
	flex-direction: column;
	background-image: linear-gradient(180deg, #56A995, #96ceb0, #fff);
	padding: 20rpx 30rpx 140rpx;
}

.top .inner {
	width: 100%;
	display: flex;
}

.top .inner .left {
	width: 210rpx;
	height: 310rpx;
	border-radius: 8rpx;
	margin-right: 25rpx;
}

.top .inner .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}


.top .inner .right .title {
	width: 100%;
	font-size: 34rpx;
	font-weight: bold;
	color: #fff;
	margin-bottom: 20rpx;
}


.top .inner .right .info {
	width: 100%;
	display: flex;
	flex-direction: column;
	font-size: 28rpx;
	color: #fff;
}

.top .inner .right .info .line {
	width: 100%;
	margin-top: 6rpx;
	display: flex;
	align-items: center;
}

.top .inner .right .info .author {
	width: 100%;
	display: flex;
	align-items: center;
}

.top .inner .right .info .author>image {
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
	margin-right: 10rpx;
}

.top .inner .right .info .line .num {
	margin-left: 4rpx;
	margin-right: 4rpx;
}

.top .memo {
	width: 100%;
	display: flex;
	flex-direction: column;
	background-image: linear-gradient(180deg, #56A995, #68c7b1);
	border-radius: 30rpx;
	padding: 20rpx 30rpx;
	margin-top: 10rpx;
	font-size: 24rpx;
}

.top .memo .title {
	width: 100%;
	font-size: 28rpx;
	font-weight: bold;
	margin-bottom: 20rpx;
	color: #fff;
	display: flex;
}

.top .memo .title .txt {
	position: relative;
	padding-bottom: 15rpx;
}

.top .memo .title .txt:after {
	content: " ";
	position: absolute;
	left: 50%;
	bottom: 8rpx;
	width: 110%;
	height: 8rpx;
	border-radius: 2rpx;
	background-color: var(--projectCompareColor);
	transform: translateX(-50%);
	border-top-left-radius: 4rpx;
	border-top-right-radius: 4rpx;
	border-bottom-right-radius: 4rpx;
	border-bottom-left-radius: 4rpx;
}

.map {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: baseline;
	padding: 30rpx 0rpx;
	color: #fff;
	font-size: 28rpx;
	font-weight: bold;
}

.top .memo .item {
	width: 100%;
	color: #fff;
	padding: 6rpx 0;
	font-size: 26rpx;
}

.top .memo .content {
	width: 100%;
	color: #333;
	padding: 6rpx 20rpx 6rpx 0;
	max-height: 110rpx;
	overflow: hidden;
	font-size: 26rpx;
	margin-bottom: 30rpx;
	position: relative;
}

.top .memo .content .txt {
	padding-right: 6rpx !important;
}

.top .memo .content .arrow {
	position: absolute;
	right: 0rpx;
	bottom: 50%;
	transform: translateY(50%);
	opacity: 1;
	color: #fff;
}

.bottom {
	width: 100%;
	display: flex;
	flex-direction: column;
	padding: 10rpx 0 0;
	margin-top: -100rpx;
	background-color: #fff;
	border-top-right-radius: 40rpx;
	border-top-left-radius: 40rpx;
	overflow: hidden;
}

.bottom .menu {
	width: 100%;
	display: flex;
	padding: 80rpx 0;
	align-items: center;
	justify-content: space-around;
	font-size: 30rpx;
	color: #333;
	height: 100rpx;
}

.bottom .menu .item {
	width: 33.33%;
	display: flex;
	align-items: center;
	justify-content: center;
	height: inherit;
}


.bottom .menu .item>text {
	padding-bottom: 10rpx;
	border-bottom: 6rpx solid transparent;
}

.bottom .menu .item.cur>text {
	color: var(--projectColor);
	border-bottom: 6rpx solid var(--projectColor);

}



.bottom .inner {
	width: 100%;
	padding: 10rpx 30rpx;
}

.bottom .user-pic {
	width: 100%;
	display: flex;
	padding: 36rpx 30rpx;
	background-color: #F3F5F7;
	border-radius: 30rpx;
	display: flex;
	flex-direction: column;
	margin-top: 30rpx;
}

.bottom .user-pic .line1 {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	padding: 10rpx 0 36rpx;
	border-bottom: 2rpx dotted #ddd;
}



.bottom .user-pic {
	width: 100%;
	display: flex;
	padding: 36rpx 30rpx;
	background-color: #F3F5F7;
	border-radius: 30rpx;
	display: flex;
	flex-direction: column;
	margin-top: 30rpx;
	justify-content: center;
}

.bottom .user-pic .line1 {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	padding: 20rpx 10rpx 36rpx;
	justify-content: space-between;
}

.bottom .user-pic .line1 .pic {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	margin: 0 15rpx;
	margin-bottom: 35rpx;
	position: relative;
}

.bottom .user-pic .line1 .pic>image {
	width: inherit;
	height: inherit;
	border-radius: 50%;
}

.bottom .user-pic .line1 .pic>text {
	position: absolute;
	left: 0;
	bottom: 0;
	font-size: 20rpx;
	text-align: center;
	width: 100rpx;
	background-color: var(--darkgreen);
	color: #fff;
	border-radius: 10rpx;
	z-index: 9;
	text-overflow: unset;
	padding: 4rpx 0;
	opacity: .9;
	margin-left: 10rpx;
	margin-right: 10rpx;
}

.bottom .user-pic .line2 {
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	padding-top: 20rpx;
	color: var(--projectColor);
	font-size: 26rpx;
}

.bottom .detail-title {
	width: 100%;
	font-size: 30rpx;
	font-weight: bold;
	padding: 20rpx 0rpx;
}

.bottom .detail {
	width: 100%;
	background-color: #fff;
	padding: 0rpx 0rpx;
	overflow: hidden;
	transform: translateY(0);
	display: flex;
	flex-direction: column;
}

.bottom .detail .detail-line {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.bottom .qr {
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 60rpx 0;
	flex-direction: column;
}

.bottom .qr image {
	width: 550rpx;
	margin-bottom: 30rpx;
}

.article-box .article .content {
	font-size: 24rpx;
	color: #333;
}

.bottom .detail .desc {
	font-size: 28rpx;
	color: #666;
	line-height: 1.8;
	display: flex;
}


/*底部*/
.bottom-line {
	height: 140rpx;
	background-color: #fff;
	border-radius: 60rpx;
	display: flex;
	align-content: space-between;
	align-items: center;
	padding: 0 20rpx;
}

.bottom-line .join {
	padding: 20rpx 30rpx;
	background-color: var(--projectColor);
	width: 200rpx;
	border-radius: 50rpx;
	color: #fff;
	text-align: center;
	font-size: 28rpx;
}

.bottom-line .join.bg-grey {
	border: 2rpx solid var(--greyLight)
}

.bottom-line .join.comment {
	background-color: var(--yellowLight);
	color: var(--yellow);
}

.bottom-line .join.bg-grey {
	box-shadow: unset;
}

.cmpt-biz-detail-mode2 .inner .slot-inner {
	flex: 1;
	display: flex;
	justify-content: flex-end;
}

.cmpt-biz-detail-mode2 .inner {
	padding: 0 !important;
}